{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "jsx": "react",
    "moduleResolution": "node",
    "outDir": "lib",
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "importHelpers": true,
    "strictNullChecks": true,
    "noLib": false,
    "sourceMap": true,
    "declaration": true
  },
  "include": [
    "src"
  ]    
}
